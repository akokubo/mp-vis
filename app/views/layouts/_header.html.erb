<!-- Static navbar -->
<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t('.app_name'), root_path, class: "navbar-brand", "data-turbolinks" => "false" %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to t('.home'), root_path, "data-turbolinks" => "false" %></li>
        <li><%= link_to t('.places_list'), places_path %></li>
        <% if logged_in? %>
          <li><%= link_to t('.users_list'), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('.account') %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('.profile'), current_user %></li>
              <li><%= link_to t('.settings'), edit_user_path(current_user) %></li>
              <li><a href="#">app settings</a></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('.log_out'), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('.log_in'), login_path %></li>
        <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('.language') %> <b class="caret"></b>
            </a>
              <ul class="dropdown-menu">
                <% I18n.available_locales.each do |locale| %>
                  <li><a href="/<%= locale.to_s %>" data-turbolinks="false"><%= t('.' + locale.to_s) %></a></li>
                <% end %>
              </ul>
          </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</header>
