<%= form_for(@place) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :mass %>
    <%= f.text_field :mass, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :collected_at %>

    <div class="input-group date datetimepicker">
      <%= f.text_field :collected_at, data: { :date_format => 'YYYY/MM/DD hh:mm' }, :class => 'form-control datetimepicker', placeholder: 'YYYY/MM/DD hh:mm:ss' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <script type="text/javascript">
      $(function(){
          $('.datetimepicker').datetimepicker();
      });
  </script>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :latitude %>
    <%= f.text_field :latitude, placeholder: "40.5092745", class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :longitude %>
    <%= f.text_field :longitude, placeholder: "141.4311736", class: "form-control" %>
  </div>
  <span class="picture">
    <%= f.label :picture %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  <%= f.submit t('.post'), class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  /* アップロードするファイルのサイズの上限を5MBに */
  $('#place_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('<%= t('.maximum_file_size') %>');
    }
  });
</script>
