<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.places.any? %>
      <h3><%= t('pluralize.place', count: 2) %> (<%= @user.places.count %>)</h3>
      <ol class="places" id="places">
        <%= render @places %>
      </ol>
      <%# usersコントローラー内でUserオブジェクトでないPlaceオブジェクトを
          ページネーションするので、対象を明示的に指定する -%>
      <div id="infinite-scrolling">
        <div id="loader"></div>
        <%= will_paginate @places %>
      </div>
    <% end %>
  </div>
</div>
