<%= form_for(@place) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :mass %>
    <%= f.text_field :mass, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :collected_at %>

    <div class="input-group date" id="datetimepicker">
      <%= f.text_field :collected_at, class: "form-control", placeholder: "YYYY/MM/DD HH:mm" %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <script>
      $(function(){
          var options = {};
          <% if I18n.locale %>
          options.locale = "<%= I18n.locale %>";
          <% end %>
          options.sideBySide = true;
          format = "YYYY/MM/DD HH:mm";
          $("#datetimepicker").datetimepicker(options);
      });
  </script>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div id="map-position" style="width: 100%; height: 205px; border: 1px solid black;">
  </div>
  <div class="form-inline">
    <div class="field form-group">
      <%= f.label :latitude %>
      <%= f.text_field :latitude, placeholder: "40.5092745", class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.label :longitude %>
      <%= f.text_field :longitude, placeholder: "141.4311736", class: "form-control" %>
    </div>
  </div>
  <script src="/google-map-position-edit.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC3igLoXPMmVDozoUpdWh2BVvoXR0alB0w&callback=initMapPositionEdit" async defer></script>

  <div class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </div>
  <div class="form-group">
    <%= f.submit t('.post'), class: "btn btn-primary" %>
  </div>
<% end %>

<script type="text/javascript">
  /* アップロードするファイルのサイズの上限を5MBに */
  $('#place_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('<%= t('.maximum_file_size') %>');
    }
  });
</script>
